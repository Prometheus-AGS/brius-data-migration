# Test Environment Configuration
# Copy this file to .env.test and update with your test database credentials

# Test Source Database (Legacy PostgreSQL)
TEST_SOURCE_DB_HOST=localhost
TEST_SOURCE_DB_PORT=5432
TEST_SOURCE_DB_USER=postgres
TEST_SOURCE_DB_PASSWORD=test_password
TEST_SOURCE_DB_NAME=test_source_db

# Test Target Database (Supabase/PostgreSQL)
TEST_TARGET_DB_HOST=localhost
TEST_TARGET_DB_PORT=5432
TEST_TARGET_DB_USER=postgres
TEST_TARGET_DB_PASSWORD=test_password
TEST_TARGET_DB_NAME=test_target_db

# Test API Configuration
TEST_API_PORT=3001
TEST_API_BASE_URL=http://localhost:3001

# Test Migration Settings
TEST_BATCH_SIZE=100
TEST_MAX_RETRY_ATTEMPTS=2
TEST_MIGRATION_TIMEOUT=10000

# Test Database Connection Pool Settings
TEST_CONNECTION_POOL_MIN=1
TEST_CONNECTION_POOL_MAX=5

# Test Logging Configuration
TEST_LOG_LEVEL=debug
TEST_LOG_FILE=tests/logs/test.log