# =================================================================
# DATABASE MIGRATION PROJECT - Environment Variables Template
# =================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control!

# ========================================
# SOURCE DATABASE (Legacy System)
# ========================================
SOURCE_DB_HOST=your-source-host.com
SOURCE_DB_PORT=5432
SOURCE_DB_USER=your_source_user
SOURCE_DB_PASSWORD=your_source_password
SOURCE_DB_NAME=legacy_database_name

# ========================================
# TARGET DATABASE (Modern System)  
# ========================================
TARGET_DB_HOST=localhost
TARGET_DB_NAME=postgres
TARGET_DB_PORT=54322
TARGET_DB_USER=postgres
TARGET_DB_PASSWORD=your_target_password

# ========================================
# SUPABASE CONFIGURATION
# ========================================
SUPABASE_URL=http://localhost:8000
SUPABASE_SERVICE_ROLE=your_service_role_jwt_token

# ========================================
# MIGRATION SETTINGS
# ========================================
BATCH_SIZE=500
MAX_RETRY_ATTEMPTS=3
MIGRATION_TIMEOUT=300000

# ========================================
# LOGGING & DEBUG
# ========================================
LOG_LEVEL=info
DEBUG_MODE=false
ENABLE_VERBOSE_LOGGING=false
